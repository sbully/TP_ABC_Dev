<Window x:Name="Demarrage" x:Class="Game_Voiture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Voiture"
        mc:Ignorable="d"
        Title="Car Game" Height="450" Width="600.696" ResizeMode="NoResize" Closed="Demarrage_Closed">
    <Grid x:Name="GrilleDemarrage" HorizontalAlignment="Left" Height="410" Margin="10,10,0,0" VerticalAlignment="Top" Width="581">
        <Image x:Name="VoitureRouge" HorizontalAlignment="Left" Height="189" Margin="40,182,0,0" VerticalAlignment="Top" Width="135" MouseLeftButtonDown="VoitureRouge_MouseLeftButtonDown" RenderTransformOrigin="0.5,0.5" />
        <Image x:Name="VoitureBleu" HorizontalAlignment="Left" Height="189" Margin="229,182,0,0" VerticalAlignment="Top" Width="135" MouseLeftButtonDown="VoitureBleu_MouseLeftButtonDown"/>
        <Image x:Name="VoitureJaune" HorizontalAlignment="Left" Height="189" Margin="409,182,0,0" VerticalAlignment="Top" Width="135" MouseLeftButtonDown="VoitureJaune_MouseLeftButtonDown"/>
        <Label x:Name="LabelChoix" Content="Choisissez votre voiture :" HorizontalAlignment="Left" Height="95" Margin="71,31,0,0" VerticalAlignment="Top" Width="467" FontSize="39"/>
    </Grid>
</Window>
